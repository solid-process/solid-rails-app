<%= render("web/guest/shared/header") %>

<main>
  <h2>Please sign in</h2>

  <%= form_with(model: user, scope: :user, url: web_users_sign_in_path) do |f| %>
    <% if f.object.errors.any? %>
      <ul>
        <% f.object.errors.full_messages.each do |message| %>
          <li><code><%= message %></code></li>
        <% end %>
      </ul>
    <% end %>

    <p>
      <%= f.label :email %>
      <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email" %>
    </p>

    <p>
      <%= f.label :password %>
      <%= f.password_field :password, required: true, autocomplete: "current-password" %>
    <p>

    <p>
      <%= f.submit "Log in" %>
    <p>
  <% end %>

  Don't have an account?
  <%= render("web/guest/shared/links/sign_up") %> or
  <%= render("web/guest/shared/links/reset_password") %>
</main>
